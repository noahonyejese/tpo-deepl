{
  "name": "tpo-deepl",
  "version": "1.2.1",
  "description": "Translate missing entries in .po files using DeepL",
  "main": "index.js",
  "type": "module",
  "bin": {
    "tpo": "./dist/cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "translate": "tsx src/cli.ts translate",
    "duplicates": "tsx src/cli.ts duplicates",
    "build": "tsup src/cli.ts --format esm --target node22 --dts --out-dir dist --shims"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "gettext",
    "po",
    "deepl",
    "cli",
    "translation"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.7.0",
  "dependencies": {
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "deepl-node": "^1.18.0",
    "dotenv": "^16.5.0",
    "dotenv-flow": "^4.1.0",
    "fast-glob": "^3.3.3",
    "gettext-parser": "^8.0.0",
    "ink": "^5.2.1",
    "path-to-regexp": "^8.2.0",
    "react": "^19.1.0",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@types/gettext-parser": "^8.0.0",
    "@types/node": "^22.15.23",
    "@types/react": "^19.1.6",
    "@types/signale": "^1.4.7",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
